# âš¡ Operations Copilot Environment Configuration
# Copy this file to .env and fill in your actual credentials.
# DO NOT commit the .env file to GitHub.

# --- Django Settings ---
SECRET_KEY=django-insecure-your-secret-key-here
DEBUG=True

# --- Database (PostgreSQL) ---
DATABASE_NAME=your_db_name
DATABASE_USER=your_db_user
DATABASE_PASSWORD=your_db_password
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_OPTIONS=-c search_path=public

# --- AI API Keys ---
# Groq for fast text/reasoning agents
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile
GROQ_MODEL_TEMPERATURE=0.0
GROQ_MODEL_MAX_TOKENS=4096

# OpenAI for Vision and Embeddings
OPENAI_API_KEY=your_openai_api_key_here

# --- Optional Integrations ---
# Twilio for WhatsApp
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_NUMBER=
TWILIO_WHATSAPP_TO=

# --- Environment Controls ---
DJANGO_ALLOW_ASYNC_QUERY=true
SCARF_NO_ANALYTICS=true
